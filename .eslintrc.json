{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-underscore-dangle": "off",
        "no-undef": "off",
        "class-methods-use-this": "off",
        "no-unused-vars": "off",
        "no-console": "off",
        "prettier/prettier": ["error", { "singleQuote": true }]
    },
    "plugins": [
        "prettier"
    ]
}
